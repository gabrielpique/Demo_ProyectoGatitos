@model string

@{
    ViewData["Title"] = "Asignar Rol Admin";
}

<div class="auth-wrapper">
    <div class="auth-container admin-container">
        <div class="auth-header">
            <h2 class="auth-title">👑 Hacer Admin</h2>
            <p class="auth-subtitle">Asignar privilegios de administrador</p>
        </div>

        <form asp-action="MakeAdmin" method="post" class="auth-form">
            <div class="input-group">
                <label class="input-label">Email del usuario</label>
                <div class="input-container">
                    <input type="email" name="email" class="form-input" required placeholder="admin@ProyectoGatitos.com" />
                    <span class="input-icon">👤</span>
                </div>
            </div>

            <button type="submit" class="auth-btn admin-btn">
                <span class="btn-text">Asignar Rol</span>
                <span class="btn-icon">👑</span>
            </button>
        </form>

        @if (TempData["Message"] != null)
        {
            <div class="auth-message success">
                @TempData["Message"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="auth-message error">
                @TempData["Error"]
            </div>
        }
    </div>
</div>

<style>
    .admin-container {
        max-width: 500px;
    }

    .admin-btn {
        background: linear-gradient(135deg, #6C5B7B, #4A3F54);
    }

        .admin-btn:hover {
            box-shadow: 0 6px 12px rgba(108, 91, 123, 0.25);
        }

    .auth-message {
        padding: 1rem;
        border-radius: 8px;
        margin-top: 1.5rem;
        text-align: center;
        font-weight: 500;
    }

    .success {
        background-color: #D4EDDA;
        color: #155724;
        border-left: 4px solid #28A745;
    }

    .error {
        background-color: #F8D7DA;
        color: #721C24;
        border-left: 4px solid #DC3545;
    }
</style>