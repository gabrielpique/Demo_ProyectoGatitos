@model ProyectoGatitos.Models.AdopcionDTOs.AnimalPerdidoDTO
@using ProyectoGatitos.Enums;

@{
    ViewData["Title"] = Model.TipoPerdida == TipoPerdida.BuscadoPorDuenio ? "Reportar Perdido" : "Reportar Encontrado";
}

<div class="form-container">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="CreatePerdido" method="post">
        <input asp-for="TipoPerdida" type="hidden" />
        <div class="form-group">
            <label asp-for="Nombre">Nombre del Animal:</label>
            <input asp-for="Nombre" class="form-input" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FechaEnQueSePerdio">Fecha (@(Model.TipoPerdida == TipoPerdida.BuscadoPorDuenio ? "Perdido" : "Encontrado")):</label>
            <input asp-for="FechaEnQueSePerdio" type="date" class="form-input" />
            <span asp-validation-for="FechaEnQueSePerdio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Mensaje">Mensaje:</label>
            <textarea asp-for="Mensaje" rows="4" class="form-input"></textarea>
            <span asp-validation-for="Mensaje" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Ubicacion">Ubicación:</label>
            <input asp-for="Ubicacion" class="form-input" />
            <span asp-validation-for="Ubicacion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NumeroContacto">Número de Contacto:</label>
            <input asp-for="NumeroContacto" class="form-input" />
            <span asp-validation-for="NumeroContacto" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Fotos (próximamente):</label>
            <input type="text" disabled placeholder="Funcionalidad próximamente" class="form-input" />
        </div>
        <button type="submit" class="button">Enviar</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .form-container {
        max-width: 500px;
        margin: 100px auto 60px; /* Ajustado margin-bottom */
        padding: 25px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-size: 1.8rem;
        color: #4A7047;
        margin-bottom: 20px;
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        color: #4A7047;
        font-weight: 500;
        margin-bottom: 5px;
    }

    .form-input {
        width: 100%;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 1rem;
        box-sizing: border-box;
    }

    textarea.form-input {
        resize: vertical;
        min-height: 80px;
    }

    .button {
        width: 100%;
        padding: 12px;
        background-color: #A7D397;
        color: #4A7047;
        font-size: 1rem;
        font-weight: 500;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .button:hover {
        background-color: #8AB87C;
    }

    .text-danger {
        color: #dc3545;
        font-size: 0.85rem;
    }

    /* Responsividad */
    @@media (max-width: 768px) {
        .form-container {
            max-width: 90%;
            margin: 80px auto 50px;
            padding: 20px;
        }

        h2 {
            font-size: 1.5rem;
        }

        .form-input {
            font-size: 0.9rem;
        }

        .button {
            font-size: 0.9rem;
            padding: 10px;
        }
    }

    @@media (max-width: 576px) {
        .form-container {
            max-width: 95%;
            margin: 60px auto 40px;
            padding: 15px;
        }

        h2 {
            font-size: 1.3rem;
        }

        .form-input {
            font-size: 0.85rem;
        }

        .button {
            font-size: 0.85rem;
            padding: 8px;
        }
    }
</style>